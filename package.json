{
  "name": "rebalancing-helper",
  "version": "1.0.0",
  "description": "리밸런싱을 도와주기 위한 단순 조회용 프로그램",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:backend": "pnpm --F @rebalancing-helper/backend dev",
    "dev:frontend": "pnpm --F @rebalancing-helper/frontend dev",
    "build": "turbo run build",
    "build:backend": "pnpm --F @rebalancing-helper/backend build",
    "build:frontend": "pnpm --F @rebalancing-helper/frontend build",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prisma:generate": "turbo run prisma:generate",
    "prisma:migrate": "pnpm --F @rebalancing-helper/backend prisma:migrate",
    "prisma:deploy": "pnpm --F @rebalancing-helper/backend prisma:deploy",
    "prisma:seed": "pnpm --F @rebalancing-helper/backend prisma:seed",
    "prisma:studio": "pnpm --F @rebalancing-helper/backend prisma:studio",
    "gql:schema": "pnpm --F @rebalancing-helper/backend gql:schema",
    "gql:codegen": "pnpm --F @rebalancing-helper/frontend gql:codegen",
    "gql:all": "turbo run gql:all --F @rebalancing-helper/frontend"
  },
  "devDependencies": {
    "turbo": "^2.4.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
