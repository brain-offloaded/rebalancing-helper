{
  "name": "rebalancing-helper",
  "version": "1.0.0",
  "description": "리밸런싱을 도와주기 위한 단순 조회용 프로그램",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:backend": "turbo run dev --filter backend",
    "dev:frontend": "turbo run dev --filter frontend",
    "build": "turbo run build",
    "build:backend": "turbo run build --filter backend",
    "build:frontend": "turbo run build --filter frontend",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "lint": "turbo run lint",
    "prisma:generate": "turbo run prisma:generate --filter backend",
    "prisma:migrate": "turbo run prisma:migrate --filter backend",
    "prisma:deploy": "turbo run prisma:deploy --filter backend",
    "prisma:seed": "turbo run prisma:seed --filter backend",
    "prisma:studio": "turbo run prisma:studio --filter backend",
    "gql:schema": "turbo run gql:schema --filter backend",
    "gql:codegen": "turbo run gql:codegen --filter frontend",
    "gql:all": "pnpm gql:schema && pnpm gql:codegen"
  },
  "devDependencies": {
    "turbo": "^2.4.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
