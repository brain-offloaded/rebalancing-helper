{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ],
      "env": [
        "BROKER_CREDENTIAL_ENCRYPTION_KEY"
      ],
      "outputLogs": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "BROKER_CREDENTIAL_ENCRYPTION_KEY"
      ]
    },
    "test:cov": {
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "BROKER_CREDENTIAL_ENCRYPTION_KEY"
      ]
    }
  }
}