{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "prisma:generate"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ],
      "env": [
        "BROKER_CREDENTIAL_ENCRYPTION_KEY"
      ],
      "outputLogs": "new-only"
    },
    "prisma:generate": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^test",
        "prisma:generate"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "BROKER_CREDENTIAL_ENCRYPTION_KEY"
      ]
    },
    "test:cov": {
      "dependsOn": [
        "^test:cov",
        "prisma:generate"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "BROKER_CREDENTIAL_ENCRYPTION_KEY"
      ]
    },
    "gql:all": {
      "dependsOn": [
        "prisma:generate"
      ],
      "outputs": [
        "generated.graphql",
        "src/graphql/**/*.ts"
      ],
      "env": [
        "ENV_FILE"
      ],
      "cache": false
    }
  }
}